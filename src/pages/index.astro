---
import Layout from '../layouts/Layout.astro'
import { Map } from '../components/Map/Map.tsx'
import Footer from '../components/Footer.astro'
import { Filter } from '../components/Map/Filter.tsx'
---

<Layout title="Changing Cities Radverkehrs Monitoring">
  <main class="w-full h-screen relative flex">
    <Map client:load />
    <div class="border-l border-gray-200 bg-ccGray-200 p-5 flex justify-between flex-col">
      <h1 class="mt-2 font-normal font-display leading-tight">Monitoring des Berliner Radnetzes</h1>
      <Filter client:load />
      <Footer />
    </div>
  </main>
</Layout>
