---
import '@fontsource/hind/700.css' // bold
import '@fontsource/open-sans' // 400/normal/regular
import '@fontsource/open-sans/500.css' // medium
import '@fontsource/open-sans/600.css' // semibold
import '@fontsource/open-sans/700.css' // bold

type Props = {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Changing Cities Radverkehrs Monitoring" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="https://changing-cities.org/favicon-32x32.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="font-sans">
    <slot />
  </body>
</html>
